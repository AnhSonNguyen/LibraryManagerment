@model LibraryManagerment.Models.TbAuthor

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <h1 class="m-0">Xóa tác giả</h1>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Xác nhận xóa tác giả</h3>
                </div>

                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Mã tác giả</dt>
                        <dd class="col-sm-9">@Model.AuthorId</dd>

                        <dt class="col-sm-3">Tên tác giả</dt>
                        <dd class="col-sm-9">@Model.AuthorName</dd>

                        <dt class="col-sm-3">Mô tả</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>
                </div>

                <div class="card-footer text-right">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="AuthorId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </button>
                        <a asp-area="Admin" asp-controller="AuthorManager" asp-action="Index" class="btn btn-secondary">
                            Hủy
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
