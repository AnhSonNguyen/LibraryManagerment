@model IEnumerable<LibraryManagerment.Models.TbMenu>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Quản lý thực đơn</h1>
            </div>
            <div class="col-sm-6 text-right">
                <a asp-area="Admin" asp-controller="MenuManager" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Thêm menu mới
                </a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách menu</h3>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Alias</th>
                                <th>Level</th>
                                <th>Vị trí</th>
                                <th>Hoạt động</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MenuId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Alias</td>
                                    <td>@item.Levels</td>
                                    <td>@item.Position</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge badge-success">Bật</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Tắt</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="MenuManager" asp-action="Edit" asp-route-id="@item.MenuId" class="btn btn-sm btn-warning mr-1">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a asp-area="Admin" asp-controller="MenuManager" asp-action="Delete" asp-route-id="@item.MenuId" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer text-muted">
                Tổng số: @Model.Count() menu
            </div>
        </div>
    </div>
</section>
</div>