@model LibraryManagerment.Models.TbAccount
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <h1 class="m-0">Sửa tài khoản</h1>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Chỉnh sửa thông tin tài khoản</h3>
                </div>

                <form asp-action="Edit" method="post">
                    <div class="card-body">
                        <input type="hidden" asp-for="AccountId" />

                        <div class="form-group">
                            <label asp-for="Username">Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Mật khẩu</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <small class="form-text text-muted">
                                Để trống nếu không muốn thay đổi mật khẩu.
                            </small>
                        </div>

                        <div class="form-group">
                            <label asp-for="FullName">Họ tên</label>
                            <input asp-for="FullName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Phone">Điện thoại</label>
                            <input asp-for="Phone" class="form-control" />
                        </div>

                        <!-- ✅ Dropdown chọn vai trò -->
                        <div class="form-group">
                            <label asp-for="RoleId">Vai trò</label>
                            <select asp-for="RoleId" class="form-control"
                                    asp-items="@(new SelectList(ViewBag.Roles, "RoleId", "RoleName", Model.RoleId))">
                                <option value="">-- Chọn vai trò --</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="IsActive">Trạng thái</label>
                            <select asp-for="IsActive" class="form-control">
                                <option value="true">Hoạt động</option>
                                <option value="false">Tạm khóa</option>
                            </select>
                        </div>
                    </div>

                    <div class="card-footer text-right">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Cập nhật
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
