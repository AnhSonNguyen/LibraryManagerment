@model LibraryManagerment.Models.TbAccount
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <h1 class="m-0">Sửa tài khoản</h1>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Chỉnh sửa thông tin tài khoản</h3>
                </div>

                <form asp-action="Edit" method="post">
                    <div class="card-body">
                        <input type="hidden" asp-for="AccountId" />

                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input asp-for="Username" class="form-control" readonly />
                        </div>

                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input asp-for="Password" type="password" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Họ tên</label>
                            <input asp-for="FullName" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Điện thoại</label>
                            <input asp-for="Phone" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Vai trò (RoleId)</label>
                            <input asp-for="RoleId" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Trạng thái</label>
                            <select asp-for="IsActive" class="form-control">
                                <option value="true">Hoạt động</option>
                                <option value="false">Tạm khóa</option>
                            </select>
                        </div>
                    </div>

                    <div class="card-footer text-right">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Cập nhật
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
