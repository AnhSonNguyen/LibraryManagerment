@model LibraryManagerment.Models.TbAccount
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <h1 class="m-0">Xóa tài khoản</h1>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-danger">
                <div class="card-header">
                    <h3 class="card-title">Xác nhận xóa tài khoản</h3>
                </div>

                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.AccountId</dd>

                        <dt class="col-sm-3">Tên đăng nhập</dt>
                        <dd class="col-sm-9">@Model.Username</dd>

                        <dt class="col-sm-3">Họ tên</dt>
                        <dd class="col-sm-9">@Model.FullName</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                    </dl>
                </div>

                <div class="card-footer text-right">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="AccountId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
